						!words.get(i).equals("38") &&
						!words.get(i).equals("39") &&
						!words.get(i).equals("40")){
					i++;
					if (!words.get(i).equals("a") &&
						!words.get(i).equals("s") &&
						!words.get(i).equals("t") &&
						!words.get(i).equals("nt") &&
						!words.get(i).equals("d") &&
